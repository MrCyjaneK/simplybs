{
  "package": "expat",
  "version": "2.6.0",
  "type": "host",
  "download": {
      "kind": "tar.gz",
      "url": "https://github.com/libexpat/libexpat/releases/download/R_2_6_0/expat-2.6.0.tar.gz",
      "sha256": "a13447b9aa67d7c860783fdf6820f33ebdea996900d6d8bbc50a628f55f099f7"
  },
  "dependencies": [
      "all:libiconv",
      "*-android*:native_android_ndk"
  ],
  "build": {
      "env": [
          "all:CFLAGS=$CFLAGS -fPIC",
          "all:LDFLAGS=$LDFLAGS -fPIC"
      ],
      "steps": [
          "all:./configure --host=$HOST --prefix=$PREFIX --disable-shared --without-docbook --without-tests --without-examples --enable-option-checking --without-xmlwf --with-pic",
          "all:make -j$NUM_CORES",
          "all:make DESTDIR=$STAGING_DIR install"
      ]
  }
}