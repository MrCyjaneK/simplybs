{
    "package": "zstd",
    "version": "1.5.7",
    "type": "host",
    "download": {
        "kind": "tar.gz",
        "sha256": "eb33e51f49a15e023950cd7825ca74a4a2b43db8354825ac24fc1b7ee09e6fa3",
        "url": "http://github.com/facebook/zstd/releases/download/v1.5.7/zstd-1.5.7.tar.gz"
    },
    "dependencies": [
        "*-android*:native/android_ndk",
        "all:native/make"
    ],
    "build": {
        "env": [
            "all:LIBTOOL=$PREFIX/native/bin/libtool",
            "armv7a-linux-androideabi:CFLAGS=$CFLAGS -DLIBC_NO_FSEEKO",
            "armv7a-linux-androideabi:CXXFLAGS=$CXXFLAGS -DLIBC_NO_FSEEKO"
        ],
        "steps": [
            "all:make -j$NUM_CORES",
            "all:mkdir -p $STAGING_DIR$PREFIX/lib",
            "all:cp ./lib/libzstd.a $STAGING_DIR$PREFIX/lib/libzstd.a"
        ]
    }
}