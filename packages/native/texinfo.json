{
    "package": "native/texinfo",
    "version": "7.2",
    "type": "native",
    "download": {
        "kind": "tar.gz",
        "sha256": "e86de7dfef6b352aa1bf647de3a6213d1567c70129eccbf8977706d9c91919c8",
        "url": "https://ftp.gnu.org/gnu/texinfo/texinfo-7.2.tar.gz"
    },
    "dependencies": [
        "all:native/automake",
        "all:native/gawk",
        "all:native/make",
        "all:native/perl"
    ],
    "build": {
        "env": [
            "all:HELP2MAN=true"
        ],
        "steps": [
            "all:./configure --prefix=$PREFIX/native",
            "all:make -j$NUM_CORES",
            "all:make DESTDIR=$STAGING_DIR install"
        ]
    }
}