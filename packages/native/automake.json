{
    "package": "native/automake",
    "version": "1.18",
    "type": "native",
    "download": {
        "kind": "tar.gz",
        "sha256": "af6043a5d4b3beef0c48161f4a6936259321cd101a34c1ab0768328515626c8a",
        "url": "http://ftpmirror.gnu.org/gnu/automake/automake-1.18.tar.gz"
    },
    "dependencies": [
        "all:native/autoconf",
        "all:native/m4",
        "all:native/make",
        "all:native/perl"
    ],
    "build": {
        "env": [
            "all:MAKEINFO=true"
        ],
        "steps": [
            "all:./bootstrap",
            "all:./configure --prefix=$PREFIX/native --disable-doc",
            "all:make -j$NUM_CORES V=1",
            "all:make install DESTDIR=$STAGING_DIR "
        ]
    }
}